{
  "name": "skillstash",
  "version": "1.0.0",
  "private": true,
  "description": "The registry for Claude Code plugins",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "dev:ingester": "turbo run dev --filter=ingester",
    "dev:cli": "turbo run dev --filter=@skillstash/cli",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:cli": "turbo run build --filter=@skillstash/cli",
    "build:workers": "turbo run build --filter='./workers/*'",
    "test": "turbo run test",
    "test:web": "turbo run test --filter=web",
    "test:cli": "turbo run test --filter=@skillstash/cli",
    "test:workers": "turbo run test --filter='./workers/*'",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "deploy:web": "turbo run build --filter=web && cd apps/web && vercel --prod",
    "deploy:workers": "alchemy deploy",
    "deploy:all": "pnpm build && alchemy deploy && pnpm deploy:web",
    "publish:cli": "turbo run build --filter=@skillstash/cli && cd apps/cli && npm publish --access public",
    "infra:dev": "alchemy dev",
    "infra:deploy": "alchemy deploy",
    "infra:destroy": "alchemy destroy",
    "db:generate": "pnpm --filter @skillstash/db exec drizzle-kit generate:sqlite",
    "db:push": "pnpm --filter @skillstash/db exec drizzle-kit push:sqlite",
    "db:studio": "pnpm --filter @skillstash/db exec drizzle-kit studio",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "reset": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "alchemy": "^0.75.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ]
}
